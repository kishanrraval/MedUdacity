<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pc.med_udacity">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UI.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.Signup"
            android:label="@string/title_activity_signup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.New_patient_info"
            android:label="@string/title_activity_new_patient_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.View_patients"
            android:label="@string/title_activity_view_patients"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.Delete_popup"
            android:label="@string/title_activity_delete_popup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.My_patients"
            android:label="@string/title_activity_my_patients"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.Notes"
            android:label="@string/title_activity_notes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.Pictures_options_popup"
            android:label="@string/title_activity_pictures_options_popup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.Doctor_profile"
            android:label="@string/title_activity_doctor_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.Printable"
            android:label="@string/title_activity_printable"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.Pdf_view"
            android:label="@string/title_activity_pdf_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.View_image"
            android:label="@string/title_activity_view_image"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>